
<div class="wrapper product add">

    <p class="title"><span>데이터 관리</span><i class="fal fa-chevron-right"></i><span>제품</span><i class="fal fa-chevron-right"></i><span>추가</span></p>

    <div class="form-box">
        <p class="form-title">썸네일 이미지</p>
        <div class="thumb-wrapper">
            <form method="post" enctype="multipart/form-data"><input name="image" type="file" accept="image/jpeg,image/png" /></form>
            <div id="divThumb" class="thumb"></div>
            <button id="buttonUploadThumb" class="default">이미지 업로드</button>
        </div>
    </div>

    <div class="form-box">
        <p class="form-title">이름</p>
        <input id="inputName" class="default" type="text" />
    </div>

    <div class="form-box">
        <p class="form-title">키워드</p>
        <div class="keyword-wrapper">
            <div id="divKeywordInput" class="keyword-input">
                <input id="inputKeyword" class="default" type="text" />
                <button id="buttonAddKeyword" class="default"><i class="fal fa-plus"></i></button>
            </div>
        </div>
    </div>

    <div class="form-box">
        <p class="form-title">설명</p>
        <textarea id="textareaDesc1" class="default"></textarea>
    </div>

    <div class="form-box">
        <p class="form-title">주의사항</p>
        <textarea id="textareaDesc2" class="default"></textarea>
    </div>

    <div class="form-box">
        <p class="form-title">이미지</p>
        <div class="image-wrapper">
            <form id="formTestImage" method="post" enctype="multipart/form-data"><input name="image" type="file" accept="image/jpeg,image/png" /></form>
            <button id="buttonAddImage" class="default"><i class="fal fa-plus"></i></button>
        </div>
    </div>

    <div class="form-box" data_type="disease">
        <p class="form-title">연관 질병</p>
        <div class="relationship-wrapper">
            <button class="default" data_type="disease"><i class="fal fa-plus"></i></button>
        </div>
    </div>

    <div class="form-box" data_type="symptom">
        <p class="form-title">연관 증상</p>
        <div class="relationship-wrapper">
            <button class="default" data_type="symptom"><i class="fal fa-plus"></i></button>
        </div>
    </div>

    <div class="form-box" data_type="food">
        <p class="form-title">연관 음식</p>
        <div class="relationship-wrapper">
            <button class="default" data_type="food"><i class="fal fa-plus"></i></button>
        </div>
    </div>

    <div class="form-box" data_type="tag">
        <p class="form-title">기타 태그</p>
        <div class="relationship-wrapper">
            <button class="default" data_type="tag"><i class="fal fa-plus"></i></button>
        </div>
    </div>

    <div class="buttons">
        <button class="default cancel" onclick="history.back();">취소</button>
        <button id="buttonSaveData" data_type="product" class="default">저장</button>
    </div>

</div>
